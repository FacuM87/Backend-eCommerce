

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/api/session/register" method="post">
                <div class="form-group my-3">
                    <label for="inputName">Name</label>
                    <input name="name" type="text" class="form-control" id="inputName" placeholder="Enter your name">
                </div>
                <div class="form-group my-3">
                    <label for="inputLastName">Last Name</label>
                    <input name="last_name" type="text" class="form-control" id="inputLastName" placeholder="Enter your last name">
                </div>
                <div class="form-group my-3">
                    <label for="inputEmail">Email address</label>
                    <input name="email" type="email" class="form-control" id="inputEmail" placeholder="Enter your email">
                </div>
                <div class="form-group my-3">
                    <label for="inputPassword">Password</label>
                    <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Choose a password">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
                <p class="mt-3">Already have an account? <a href="/">Login</a></p>
            </form>
        </div>
    </div>
</div>